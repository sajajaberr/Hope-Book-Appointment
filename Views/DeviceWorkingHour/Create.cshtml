@model HopeBookAppointment.Models.DeviceWorkingHourModel;
<html>
<head>

</head>
<body>
    <form asp-action="AddNewDuration">
    <div class="row">
        <div class="col-md-4">
            Device Name
            <span class="text-danger">*</span>
            <select class="form-control" asp-for="DeviceId" asp-items="@(new SelectList(ViewBag.Devices,"DeviceId","DeviceName"))">
                <option value="" selected="selected">Please Select</option>
            </select>
            <span asp-validation-for="DeviceId" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            Working Date
            <span class="text-danger">*</span>
            <input type="date" asp-for="WorkingDate" class="form-control" />
            <span asp-validation-for="WorkingDate" class="text-danger"></span>
        </div>
        <div class="col-md-4">
            Duration From-To
            <span class="text-danger">*</span>
            <input type="text" class="form-control" asp-for="FromToHour" />
            <span asp-validation-for="FromToHour" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <input type="submit" class="btn btn-primary" value="Create New Duration" />
        </div>
    </div>
    </form>
</body>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

</html>