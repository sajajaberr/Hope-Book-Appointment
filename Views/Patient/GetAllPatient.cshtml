@{
}
@model List<HopeBookAppointment.Models.PatientModel>;
<html>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>

<body>
    <div class="row">
        <div class="col-md-12">
            <a href="Create">
                <i class="fa fa-plus-square" aria-hidden="true"></i>
                Add New Patient
            </a>
        </div>
    </div>
    <table id="example" class="table table-striped" style="width:100%">
        <thead>
            <tr style="background-color: #4267b2; color: white;">
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Mobile</th>
                <th>Gender</th>
                <th>Has Health Insurance</th>
                <th>Action</th>

            </tr>
        </thead>
        <tbody>
            @foreach (HopeBookAppointment.Models.PatientModel item in Model)
            {
            <tr>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Email</td>
                <td>@item.Mobile</td>

                @if (item.Gender == "1")
                {
                    <td>Male</td>
                }
                else
                {
                    <td>Female</td>
                }
                <td>@item.HasHealthInsurance</td>
                <td>
                    <a asp-controller="Patient" asp-action="Update" asp-route-Id="@item.PatientId"><i class="fa fa-pencil IconUpdate"></i></a>
                    <a asp-controller="Patient" asp-action="Delete" asp-route-Id="@item.PatientId"><i class="fa fa-trash IconDelete"></i></a>

                </td>
            </tr>
            }


    </table>
</body>
</html>