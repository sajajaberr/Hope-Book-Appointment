@{
}

@model List<HopeBookAppointment.Models.DeviceModel>;
<html>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>

<body>
    <div class="row">
        <div class="col-md-12">
            <a href="Create">
                <i class="fa fa-plus-square" aria-hidden="true"></i>
                Add New Device
            </a>
        </div>
    </div>
    <table id="example" class="table table-striped" style="width:100%">
        <thead>
            <tr style="background-color: #4267b2; color: white;">
        <th>Device Name</th>
        <th>Responsible Employee</th>
        <th>Price</th>
        <th>Description</th>
        <th>Image</th>
        </tr>
        </thead>
        <tbody>
            @foreach (HopeBookAppointment.Models.DeviceModel item in Model)
            {
                <tr>
                    <td>@item.DeviceName</td>
                    <td>@item.ResponsibleEmployee</td>
                    <td>@item.Price</td>
                    <td>@item.Description</td>
                    <td>
                        <img src="@item.ImageFullPath" width="75px" height="50px" />
                    </td>

                </tr>
            }


    </table>
</body>
</html>