@{
    ViewData["Title"] = "Home Page";
}

<html>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <style>
        * {
            box-sizing: border-box;
        }

        body {
            font-family: Arial, Helvetica, sans-serif;
        }

        /* Float four columns side by side */
        .column {
            float: left;
            width: 33.33%;
            padding: 0 5px;
        }

        .row {
            margin: 0 -5px;
        }

            /* Clear floats after the columns */
            .row:after {
                content: "";
                display: table;
                clear: both;
            }



        /* Style the counter cards */
        .card {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            padding: 16px;
            text-align: center;
            background-color: #4267b2;
            color: white;
        }

        .fa {
            font-size: 50px;
        }

        .counter
        {
            font-size:20px;
        }
    </style>
</head>
<body>
    <div class="row">
        <div class="col-md-12" style="text-align:center">
            <img src="~/img/book.jpg" width="60px" />
            <span style="font-family:'Baskerville Old Face'; font-size:30px">Welcome to Hope Book Appoitmenet System</span>
        </div>
    </div>
    <div class="row">
        <div class="column">
            <div class="card">
                <p><i class="fa fa-user"></i></p>
                <span class="counter"> @ViewBag.Patient</span>
                <p>Patients</p>
            </div>
        </div>

        <div class="column">
            <div class="card">
                <p><i class="fa fa-desktop"></i></p>
                <span class="counter"> @ViewBag.Device</span>
                <p>Devices</p>
            </div>
        </div>

        <div class="column">
            <div class="card">
                <p><i class="fa fa-calendar-o"></i></p>
                <span class="counter"> @ViewBag.Appoitment</span>
                <p>Reservations</p>
            </div>
        </div>

       
    </div>

    <script type="text/javascript">

    $(document).ready(function () {
        $('.counter').each(function () {
            $(this).prop('Counter', 1).animate({
                Counter: $(this).text()
            }, {
                duration: 3000,
                easing: 'swing',
                step: function (now) {
                    $(this).text(Math.ceil(now));
                }
            });
        });
    });
</script>

</body>
</html>



